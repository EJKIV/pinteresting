
<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">

    <% @pins.each do |pin| %>
     <div class ="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
          <%= pin.description %><br/>
          <strong><%= pin.user.user_name %></strong>
          <% if pin.user == current_user %>
            <div class="actions">
              <%= link_to edit_pin_path(pin) do %>
                <%= content_tag :span, 'Edit', class: "glyphicon glyphicon-edit" %>
              <% end %>
              
              <%= link_to method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= content_tag :span, 'Delete', class: "glyphicon glyphicon-trash" %>
              <% end %>
           </div>
          <% end %>
      </div>
      </div>
    <% end %>
  </div>
<%= content_tag :div, class: "center" do %>
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  <% end %>

